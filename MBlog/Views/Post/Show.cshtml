@using MBlog.Models.Post
@model PostsViewModel
@{
    ViewBag.Title = "Show Blog Posts";
    Layout = "~/Views/Shared/_BlogLayout.cshtml";
}
<ul class="blog-list">
    @foreach (var viewModel in Model.Posts)
    {
        <li class="blog-post">
            @{
                Html.RenderPartial("_ShowSinglePost", viewModel);
                if (Model.ShowComments)
                {
                    Html.RenderPartial("_ShowCommentsForPost", viewModel);
                }
            }
        </li>        
    }
</ul>
