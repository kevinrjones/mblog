@{ Layout = "~/Views/Shared/_Layout.cshtml"; }
@model MBlog.Models.Post.BasePostViewModel
           
@RenderBody()

@section PubHeaders
{
    @{
        string atomurl = Url.Action("atom", "Feed", new {Model.Nickname});
        string rssurl = Url.Action("Rss", "Feed", new {Model.Nickname});
    }

    <link href="@rssurl" type="application/rss+xml" rel="alternate" title="RSS Feed" />
    <link href="@atomurl" type="application/atom+xml" rel="alternate" title="Atom Feed" />
    <script src="@Url.Content("~/Scripts/MBlog/mblog-post.js")"></script>
}