@{ Layout = "~/Views/Shared/_Layout.cshtml"; }
@using MBlog.Models.Post
@model PostsViewModel
           
@RenderBody()

@section PubHeaders
{
    @{
        string atomurl = string.Format("{0}://{1}/{2}/feed/atom", Request.Url.Scheme, Request.Url.Authority, Model.Nickname);        
        string rssurl = string.Format("{0}://{1}/{2}/feed", Request.Url.Scheme, Request.Url.Authority, Model.Nickname);
    }

    <link href="@atomurl" type="application/atom+xml" rel="alternate" title="Atom Feed" />
    <link href="@rssurl" type="application/rss+xml" rel="alternate" title="RSS Feed" />
}

