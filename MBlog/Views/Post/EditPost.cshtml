@using MBlog.Models.Post
@model CreatePostViewModel

<section id="blog-post-form">
    <div id="blog-post-form-header">
        @ViewBag.Title
    </div>
    <div class="post-help">
        Posts use BBCode. you can use [b], [i], [u], [code], [image], [quote], [list]
        (for ul), [*] (for li) and [url].
    </div>
    <div id="blog-post-form-body">
        @using (Html.BeginForm((string)ViewBag.Action, "post", FormMethod.Post, new { }))
        {
            @Html.HiddenFor(m => m.BlogId)
            <div>
                Title:
            </div>
            <div>
                @Html.TextBoxFor(m => m.Title, new { @class = "maxwidth" })
            </div>
            <div>
                @Html.ValidationMessageFor(m => m.Post)
            </div>
            <div>
                Post:
            </div>
            <div>
                <div>
                    @Html.TextAreaFor(m => m.Post, new { cols = "25", rows = "25", @class = "maxwidth" })
                </div>
                <div>
                    @Html.ValidationMessageFor(m => m.Post)
                </div>
            </div>
            <div>
                <input type="submit" value="Create Post" />
            </div>
        }
    </div>
</section>
