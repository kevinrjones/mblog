@using MBlog.Models.User
@using MBlog.Resources.User
@using MBlog.Resources.General
@model UserViewModel
@{
    ViewBag.Title = Html.Encode(Login.Title);
}
<div style="margin-top: 30px">
    @using (Html.BeginForm("DoLogin", "user", FormMethod.Post, new { @class = "form" }))
    {
        <fieldset>
            <legend>@Html.Encode(Login.Title)</legend>
            <div class="form-row">
                <div class="form-label">@Html.LabelFor(m => m.Email, Global.Email)</div>
                <span>@Html.TextBoxFor(m => m.Email)</span>
                <div class="form-label">@Html.ValidationMessageFor(m => m.Email)</div>
            </div>
            <div class="form-row">
                <div class="form-label">@Html.LabelFor(m => m.Password, Global.Password)</div>
                <span>@Html.PasswordFor(m => m.Password)</span>
                <div class="form-label">@Html.ValidationMessageFor(m => m.Password)</div>
            </div>
            <div class="form-row">
                <input type="submit" />
            </div>
        </fieldset>
    }
</div>
