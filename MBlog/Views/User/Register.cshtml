@using MBlog.Models.User
@using MBlog.Resources.Global
@using MBlog.Resources.User
@model UserViewModel
@{
    ViewBag.Title = Html.Encode(Register.Title);
}
<div style="margin-top: 30px">
    @using (Html.BeginForm("Create", "user", FormMethod.Post, new { @class = "form" }))
    {
        @Html.ValidationSummary(true)
        <fieldset>
            <legend>@Html.Encode(Register.Title)</legend>
            <div class="form-row">
                <div class="editor-label">
                    @Html.LabelFor(model => model.Name, Global.Name)
                </div>
                <div class="editor-field">
                    @Html.EditorFor(model => model.Name)
                    @Html.ValidationMessageFor(model => model.Name)
                </div>
            </div>
            <div class="form-row">
                <div class="editor-label">
                    @Html.LabelFor(model => model.Email, Global.Email)
                </div>
                <div class="editor-field">
                    @Html.EditorFor(model => model.Email)
                    @Html.ValidationMessageFor(model => model.Email)
                </div>
            </div>
            <div class="form-row">
                <div class="editor-label">
                    @Html.LabelFor(model => model.Password, Global.Password)
                </div>
                <div class="editor-field">
                    @Html.PasswordFor(model => model.Password)
                    @Html.ValidationMessageFor(model => model.Password)
                </div>
            </div>
            <div class="form-row">
                <div class="editor-label">
                    @Html.LabelFor(model => model.RepeatPassword, Global.RepeatPassword)
                </div>
                <div class="editor-field">
                    @Html.PasswordFor(model => model.RepeatPassword)
                    @Html.ValidationMessageFor(model => model.RepeatPassword)
                </div>
            </div>
            <div class="form-row">
                <div>
                    <input type="submit" value="@Html.Encode(Register.Title)" id="submit" name="submit" />
                </div>
            </div>
        </fieldset>
    }
    <div>
        @Html.ActionLink("Back to List", "Index", "Home")
    </div>
</div>
