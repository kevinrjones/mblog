<!DOCTYPE html>
<html class="no-js">
<head>
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/main.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/shCore.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/shThemeDefault.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.6.1.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/shCore.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/shBrushCss.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/shBrushCSharp.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/shBrushJScript.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/shBrushPowerShell.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/shBrushRuby.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/shBrushSql.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/shBrushXml.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/shBrushBash.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/modernizr-1.7.min.js")" type="text/javascript"></script>
    <script type="text/javascript">
        SyntaxHighlighter.defaults['toolbar'] = true;
        SyntaxHighlighter.all();
    </script>
</head>
<body>
    <div class="wrapper">
        <div class="mainbody">
            <header>
                <nav>
                    <ul class="headerList main-list">
                        @if (HttpContext.Current.User == null || !HttpContext.Current.User.Identity.IsAuthenticated)
                        {                    
                            <li>@Html.ActionLink("register", "register", "user", null, null)</li>
                            <li>@Html.ActionLink("login", "login", "user", null, null)</li>
                        }
                        else
                        { 
                            <li>@Html.ActionLink("admin", "Index", "admin", null, null)</li>
                            <li>@Html.ActionLink("logout", "logout", "user", null, null)</li>
                        }
                        <li><a href="#">about</a></li>
                        <li><a href="#">faq</a></li>
                    </ul>
                </nav>
            </header>
            <div class="blog-main-body">
                @RenderBody()
            </div>
        </div>
    </div>
</body>
</html>
