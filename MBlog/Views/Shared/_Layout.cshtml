        SyntaxHighlighter.defaults['toolbar'] = true;
        SyntaxHighlighter.all();
    </script>
    @RenderSection("PubHeaders", false)
    @RenderSection("DashboardHeaders", false)
</head>
<body>
    <div class="wrapper">
        <div class="mainbody">
            <header>
                <nav>
                    <ul class="headerList main-list">
                        @Html.AuthenticationStatus()
                        <li><a href="#">about</a></li>
                        <li><a href="#">faq</a></li>
                    </ul>
                </nav>
            </header>
            <div class="blog-main-body">
                @RenderBody()
            </div>
            <div class="blog-sidebar">
                Sidebar
            </div>
            <div class="clear-both"></div>
        </div>
    </div>
</body>
</html>
