@using MBlog.HtmHelpers
<!DOCTYPE html>
<html class="no-js">
<head>
    <title>@ViewBag.Title</title>
    <link href='http://fonts.googleapis.com/css?family=Ropa+Sans|Asap|Quicksand|Open+Sans' rel='stylesheet' type='text/css'>
    @Rejuiced.CssFor("~/Combined-{0}.css")
    @Rejuiced.JsFor("~/Combined-{0}.js")
    <link href="~/Content/Styles/main.less" rel="stylesheet" type="text/css" />
    <link rel="service" type="application/atomsvc+xml" href="@Url.Action("GetServiceDocument", "Atom", new{}, HttpContext.Current.Request.Url.Scheme)" />
