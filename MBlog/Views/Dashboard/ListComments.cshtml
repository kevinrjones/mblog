@using MBlog.Models.Post
@using MBlog.Resources.Admin
@using MBlog.Resources.General
@model PostsViewModel
@{
    ViewBag.Title = Html.Encode(Index.ListPosts);
    Layout = "~/Views/Admin/_AdminLayout.cshtml";
}
<section class="list-posts">
    <table >
        @foreach (var postViewModel in Model.Posts)
        {
            <tr>
                <td>
                    @Html.ActionLink(Global.View, "Show", "Post", new { nickname = "kevin", link = postViewModel.Link, year = postViewModel.YearPosted, month = postViewModel.MonthPosted, day = postViewModel.DayPosted }, null)
                </td>
                <td>
                    @Html.ActionLink(Global.Edit, "edit", "Post", new { nickname = "kevin", postId = postViewModel.Id, blogId = Model.BlogId  }, null)
                </td>
                <td>
                    @MvcHtmlString.Create(postViewModel.Title)
                </td>
                <td>
                    @Html.ActionLink(Global.Delete, "delete", "Post", new { nickname = "kevin", postId = postViewModel.Id, blogId = Model.BlogId }, null)
                </td>
            </tr>
        }
    </table>
</section>